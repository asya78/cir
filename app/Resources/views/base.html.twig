<!DOCTYPE html>
<html>
    <head>
        {% block head %}

        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>Център за Информационни Ресурси{% block title %}{% endblock %} </title>
        {% block stylesheets %}
            <!-- Bootstrap Core CSS -->
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
            <!-- Bootstrap Date Time Picker -->
            <link rel="stylesheet" href="{{ asset('css/bootstrap-datepicker.min.css') }}">
            <!-- Bootstrap Toggle -->
            <link rel="stylesheet" href="{{ asset('css/bootstrap-toggle.min.css') }}">
            <!-- Footable Core CSS -->
            <link rel="stylesheet" href="{{ asset('css/footable.core.css') }}">
            <!-- Custom CSS -->
            <link rel="stylesheet" href="{{ asset('css/main.css') }}">
            <!-- Custom Fonts -->
            <link rel="stylesheet" href="{{ asset('font-awesome/css/font-awesome.min.css') }}">
            <!-- Scroll To Top CSS -->
            <link rel="stylesheet" href="{{ asset('css/backTop.css') }}">
            <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
            <!-- jQuery -->
            <script src="{{ asset('js/jquery-3.3.1.min.js') }}"></script>
            <!-- Bootstrap Core JavaScript -->
            <script src="{{ asset('js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('js/bootstrap-toggle.min.js') }}"></script>
        {% endblock %}

        {% endblock %}
    </head>
    <body id="page-top" class="index">
        {% block header %}
                <!-- Navigation -->
                <nav class="navbar navbar-default navbar-fixed-top">
                    <div class="container">
                        <div class="row">
                        <!-- Brand and toggle get grouped for better mobile display -->
                        <div class="navbar-header page-scroll">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                                <span class="sr-only"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand page-scroll" href="{{ path('cir_index') }}">{% block nav_title %}Начало{% endblock %}</a>
                        </div>

                        <!-- Collect the nav links, forms, and other content for toggling -->
                        <div class="navbar-collapse collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav navbar-right">
                                <li class="hidden">
                                    <a href="#page-top"></a>
                                </li>
                                <li>
                                    <a class="page-scroll" href="{{ path('cir_index') }}#directions">Направления</a>
                                </li>
                                <li>
                                    <a class="page-scroll" href="{{ path('cir_index') }}#activities">Дейности</a>
                                </li>
                                <li>
                                    <a class="page-scroll" href="{{ path('cir_index') }}#halls">Зали</a>
                                </li>
                                <li>
                                    <a class="page-scroll" href="{{ path('cir_index') }}#history">История</a>
                                </li>
                                {% if app.user %}
                                <li class="dropdown">
                                    <a class="dropdown-toggle" data-toggle="dropdown">{{ app.getUser().getFullName() }} <b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="{{ path('view_user', {'id' :app.getUser().getId()}) }}">Профил</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('all_hall') }}">Зали</a>
                                        </li>
                                        {% if app.user and app.getUser().isAdmin() %}
                                        {% if app.getUser().isLector() %}
                                        <li>
                                            <a href="{{ path('all_requestHall') }}">Заявки</a>
                                        </li>
                                        {% endif %}
                                        {% if app.getUser().isOperator() %}
                                        <li>
                                            <a href="">Заявки софтуер</a>
                                        </li>
                                        <li>
                                            <a href="">Проблеми</a>
                                        </li>
                                        {% endif %}
                                        <li>
                                            <a href="{{ path('all_user') }}" >Потребители</a>
                                        </li>
                                        {% endif %}
                                        <li>
                                            <a href="{{ path('security_logout') }}">Изход</a>
                                        </li>
                                    </ul>
                                </li>
                                {% else %}
                                <li>
                                    <a class="page-scroll" href="{{ path('security_login') }}">Вход</a>
                                </li>
                                {% endif %}
                            </ul>
                        </div>
                        <!-- /.navbar-collapse -->
                        </div>
                    </div>
                    <!-- /.container-fluid -->
                </nav>
        {% endblock %}

        {% block body %}

        {% endblock %}

        {% block footer %}
        <!-- Footer Wrap-->
        <section id="footerwrap">
        </section>
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <span class="copyright">ЦИР - ТУ София &copy; Технически университет София 2019</span>
                    </div>
                </div>
            </div>
        </footer>

    {% endblock %}

        {% block javascripts %}

            <a id='backTop'>Back To Top</a>

            <!-- FooTable jQuery Plugin -->
            <script src="{{ asset('js/footable.js') }}" type="text/javascript"></script>

            <!-- Plugin JavaScript -->
            <script src="{{ asset('js/jquery.easing.min.js') }}"></script>
            <script src="{{ asset('js/classie.js') }}"></script>
            <script src="{{ asset('js/cbpAnimatedHeader.js') }}"></script>
            <script src="{{ asset('js/moment.min.js') }}"></script>
            <script src="{{ asset('js/bootstrap-datepicker.min.js') }}"></script>

            <!-- Scroll To Top jQuery Plugin -->
            <script src="{{ asset('js/jquery.backTop.min.js') }}"></script>

            <!-- Custom Theme JavaScript -->
            <script src="{{ asset('js/main.js') }}"></script>
            <script src="{{ asset('js/pop-up.js') }}"></script>



        {% endblock %}
    </body>
</html>
