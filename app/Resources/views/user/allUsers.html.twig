{% extends 'base.html.twig' %}

{% block body %}

    <section>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Потребители</h1>
                </div>
            </div>
            {#<div class="row" style="margin-bottom: 20px;">#}
                {#<div class="col-lg-12 text-right">#}
                    {#<a class="btn btn-info" href="{{ path('hall_create') }}"><i class="fa fa-plus-circle"></i> Добавяне на зала</a>#}
                {#</div>#}
            {#</div>#}
            <div class="row">
                <div class="col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <table class="table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th>Потребителски Номер</th>
                                    <th>Ел. Поща</th>
                                    <th>Име</th>
                                    <th>Тип Потребител</th>
                                    <th>Статус</th>
                                    {% if app.getUser().isAdmin()  %}
                                    <th>Дейности</th>
                                    {% endif %}
                                </tr>
                                </thead>
                                <tbody>
                                {% for user in users %}
                                    <tr>
                                        <td>{{ user.id }}</td>
                                        <td>{{ user.email }}</td>
                                        <td>{{ user.fullName }}</td>
                                        <td>{{ user.roles|join(', ') }}</td>
                                        <td>{{ user.status? 'Активен':'Неактивен' }}</td>
                                        {% if app.getUser().isAdmin()  %}
                                        <td>
                                            <div class="btn-group">
                                                {#<a class="btn btn-danger" href="{{ path('user_delete', {'id' :hall.id}) }}">Изтриване</a>#}
                                                <a class="btn btn-primary" href="{{ path('view_profile', {'id' :user.id}) }}">Изглед</a>
                                                <a class="btn btn-primary" href="{{ path('edit_profile', {'id' :user.id}) }}">Редактиране</a>
                                            </div>
                                        </td>
                                        {% endif %}
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}


