{% extends 'base.html.twig' %}

{% block body %}

    <section>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Потребители</h1>
                </div>
            </div>
            {#<div class="row" style="margin-bottom: 20px;">#}
                {#<div class="col-lg-12 text-right">#}
                    {#<a class="btn btn-info" href="{{ path('hall_create') }}"><i class="fa fa-plus-circle"></i> Добавяне на зала</a>#}
                {#</div>#}
            {#</div>#}
            <div class="row">
                <div class="col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <table class="table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th>Номер</th>
                                    <th>Имейл</th>
                                    <th>Име</th>
                                    <th>Статус</th>
                                    <th>Дейности</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for user in users %}
                                    <tr>
                                        <td>{{ user.id }}</td>
                                        <td>{{ user.email }}</td>
                                        <td>{{ user.fullName }}</td>
                                        <td>{{ user.getStatus()? 'Активен':'Неактивен' }}</td>
                                        <td>
                                            <div class="btn-group">
                                                {#<a class="btn btn-danger" href="{{ path('hall_delete', {'id' :hall.id}) }}">Изтриване</a>#}
                                                <a class="btn btn-primary" href="{{ path('user_profile') }}">Редактиране</a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}


