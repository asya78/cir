{% extends 'base.html.twig' %}

{% block body %}

    <section>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">График на зала {{ hall.number }}</h1>
                </div>
            </div>
            <div class="row" style="margin-bottom: 20px;">
                <div class="col-lg-12 text-right">
                    <a class="btn btn-info" href="{{ path('requestHall_create') }}"><i class="fa fa-plus-circle"></i> Заявка на зала</a>
                    <a class="btn btn-default" href="{{ path('hall_all') }}"><i class="fa fa-arrow-circle-left custom"></i> Обратно</a>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <table class="table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th>Дата</th>
                                    <th>Начален час</th>
                                    <th>Краен час</th>
                                    <th>Описание</th>
                                    <th>Заявил</th>
                                    <th>Действия</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for requestsHall in requestsHalls %}
                                    <tr>
                                        <td>{{ requestsHall.date|date("Y/m/d") }}</td>
                                        <td>{{ requestsHall.timeStart|date('H:i') }}</td>
                                        <td>{{ requestsHall.timeEnd|date('H:i') }}</td>
                                        <td>{{ requestsHall.description }}</td>
                                        <td>{{ requestsHall.requester.fullName}}</td>
                                        <td>
                                            <div class="btn-group">
                                                <a class="btn btn-warning" href="{{ path('requestHall_edit', {'id' :requestsHall.id}) }}"><i class="fa fa-edit" title="Редактиране"></i></a>
                                                <a class="btn btn-danger" href="{{ path('requestHall_delete', {'id' :requestsHall.id}) }}"><i class="fa fa-trash" title="Изтриване"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}




