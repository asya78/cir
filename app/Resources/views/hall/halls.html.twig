{% extends 'base.html.twig' %}

{% block body %}

    <section>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Зали</h1>
                </div>
            </div>
            <div class="row" style="margin-bottom: 20px;">
                <div class="col-lg-12 text-right">
                    <a class="btn btn-info" href="{{ path('hall_create') }}"><i class="fa fa-plus-circle"></i> Добавяне на зала</a>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <table class="table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th>Номер зала</th>
                                    <th>Брой места</th>
                                    <th>Брой компютри</th>
                                    <th>Лаптоп</th>
                                    <th>Проектор</th>
                                    <th>Допълнителна информация</th>
                                    <th>Снимка</th>
                                    <th>Действия</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for hall in halls %}
                                    <tr>
                                        <td>{{ hall.getNumber() }}</td>
                                        <td>{{ hall.seats }}</td>
                                        <td>{{ hall.computers }}</td>
                                        <td>{{ hall.laptop? 'Да':'Не' }}</td>
                                        <td>{{ hall.projector? 'Да':'Не' }}</td>
                                        <td>{{ hall.info }}</td>
                                        <td>{% if hall.image is not null %} Да {% else %} Не {% endif %}</td>
                                        <td>
                                            <div class="btn-group">
                                                <a class="btn btn-danger" href="{{ path('hall_delete', {'id' :hall.id}) }}">Изтриване</a>
                                                <a class="btn btn-primary" href="{{ path('hall_edit', {'id' :hall.id}) }}">Редактиране</a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

