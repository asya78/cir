{% extends 'base.html.twig' %}

{% block body %}
    <section>
        <div class="container ">
            <div class="well col-xs-8 col-xs-offset-2">
                <form class="form-horizontal" enctype="multipart/form-data"  action="{{ path('edit_hall',{id: hall.id}) }}" method="POST">
                    <fieldset>
                        <legend>Редактиране на зала</legend>

                        <div class="form-group">
                            <label class="col-xs-5 control-label" for="hall_number">Номер на зала:</label>
                            <div class="col-xs-4">
                                <input type="text" class="form-control" id="hall_number" placeholder="" name="hall[number]" value="{{ hall.number }}">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-xs-5 control-label" for="hall_seats">Брой места:</label>
                            <div class="col-xs-4">
                                <input type="number" class="form-control" id="hall_seats" placeholder="" name="hall[seats]" value="{{ hall.seats }}">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-xs-5 control-label" for="hall_computers">Брой компютри:</label>
                            <div class="col-xs-4">
                                <input type="number" class="form-control" id="hall_computers" placeholder="" name="hall[computers]" value="{{ hall.computers }}">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-xs-5 control-label" for="hall_laptop">Възможност за внасяне на лаптоп:</label>
                            <div class="col-xs-4">
                                <input type="radio" class="radio-inline" id="hall_laptop" value="1" name="hall[laptop]" {{ hall.laptop? 'checked':'' }}>Да
                                <input type="radio" class="radio-inline" id="hall_laptop" value="0" name="hall[laptop]" {{ hall.laptop? '':'checked' }}>Не
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-xs-5 control-label" for="hall_projector">Възможност за внасяне на проектор:</label>
                            <div class="col-xs-4">
                                <input type="radio" class="radio-inline" id="hall_projector" value="1" name="hall[projector]" {{ hall.projector? 'checked':'' }}>Да
                                <input type="radio" class="radio-inline" id="hall_projector" value="0" name="hall[projector]" {{ hall.projector? '':'checked' }}>Не
                            </div>
                        </div>



                        <div class="form-group">
                            <label class="col-xs-5 control-label" for="hall_info">Допълнителна информация:</label>
                            <div class="col-xs-7">
                                <textarea class="form-control" rows="6" id="hall_info" name="hall[info]">{{ hall.info }}</textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-5 control-label" for="hall_image">Снимка</label>
                            <div class="col-sm-7">
                                <input type="file" accept=".jpg, .jpeg, .png" class="form-control" id="hall_image" placeholder=""
                                       name="hall[image]" value="{{ hall.image }}">
                            </div>
                        </div>
                        {{ form_row(form._token) }}

                        <div class="form-group">
                            <div class="col-sm-5 col-sm-offset-5">
                                <a class="btn btn-default" href="{{ path('all_hall') }}"><i class="fa fa-ban"></i> Отказване</a>
                                <button type="submit" class="btn btn-primary"><i class="fa fa-edit"></i> Редактиране</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </section>
{% endblock %}

