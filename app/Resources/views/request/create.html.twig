{% extends 'base.html.twig' %}

{% block body %}
    <section>
        <div class="container ">
            <div class="well col-xs-8 col-xs-offset-2">
                <form class="form-horizontal" enctype="multipart/form-data"  action="{{ path('requestHall_create') }}" method="POST">
                    <fieldset>
                        <legend>Заявка за зала</legend>

                        <div class="form-group">
                            <label class="col-xs-5 control-label" for="hallId">Номер на зала:</label>
                            <div class="col-xs-4">
                                <select class="form-control" id="hallId" name="hallId">
                                    <option value="">Избери</option>
                                    {%  for hall in halls %}
                                        <option value="{{ hall.id }}">{{ hall.number }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-xs-5 control-label" for="date">Дата:</label>
                            <div class="col-xs-4">
                                <input type="date" class="form-control" id="date" name="date">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-xs-5 control-label" for="timeStart">Начален час :</label>
                            <div class="col-xs-4">
                                <input type="time" class="form-control" id="timeStart" placeholder="" name="timeStart">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-xs-5 control-label" for="timeEnd">Краен час :</label>
                            <div class="col-xs-4">
                                <input type="time" class="form-control" id="timeStart" placeholder="" name="timeEnd">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-xs-5 control-label" for="description">Допълнителна информация:</label>
                            <div class="col-xs-7">
                                <textarea  class="form-control" rows="6" id="description" name="description"></textarea>
                            </div>
                        </div>

                        {{ form_row(form._token) }}

                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-5">
                                <a class="btn btn-default" href="{{ path('cir_index') }}">Отказване</a>
                                <button type="submit" class="btn btn-primary">Добавяне</button>
                            </div>
                        </div>



                    </fieldset>
                </form>
            </div>
        </div>
    </section>
{% endblock %}